            @Html.DisplayNameFor(model => model.serialNo)
        </dt>
        <dd class="col-sm-10" style="visibility:hidden">
            @Html.DisplayFor(model => model.serialNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Html.DisplayFor(model => model.Image)" width="100px" height="100px" />
